# Basic Settings
set ignorecase true
set icons true


# Custom Functions

cmd setwallpaper %cp "$f" ~/.config/wall.jpg && xwallpaper --zoom "$f"

set cleaner '~/.config/lf/cleaner'
set previewer '~/.config/lf/scope'

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
		*.zip) unzip "$f" ;;
		*.tar.gz) tar -xzvf "$f" ;;
		*.tar.bz2) tar -xjvf "$f" ;;
		*.tar) tar -xvf "$f" ;;
		*.7z) 7z x "$f" ;;
		*) echo "Unsupported format" ;;
	esac
}}

## drag and drop

cmd dragon ${{
	dragon-drop -x "$f"
	}}

## Open with vim
cmd open ${{
    case $(file --mime-type "$f" -bL) in
		        text/*|application/json) $EDITOR "$fx";;
						        *) for f in "$fx"; do xdg-open "$f"> /dev/null 2> /dev/null & done;;
     esac
}}

## Bindings
map au unarchive
map R reload
map DD delete
map bg setwallpaper
map og dragon
## Movement

map gc cd ~/Documents
map gd cd ~/Downloads
map gp cd ~/Pictures
map gv cd ~/Drive
